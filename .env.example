NODE_ENV=development
PORT=8080
APP_BASE_URL=http://localhost:8080

# PostgreSQL
DATABASE_URL=postgresql://postgres:postgres@localhost:5432/meetscheduling

# Auth and signing
JWT_SECRET=replace-with-strong-random-secret
INTEGRATION_TOKEN_SECRET=replace-with-strong-random-secret
PUBLIC_BOOKING_SIGNING_SECRET=replace-with-strong-random-secret

# Scheduling defaults
HOST_DEFAULT_TIMEZONE=UTC
SLOT_INTERVAL_MINUTES=15

# SMTP Email (optional for confirmations)
SMTP_HOST=
SMTP_PORT=587
SMTP_SECURE=false
SMTP_USER=
SMTP_PASS=
EMAIL_FROM=

# Google Calendar OAuth (optional, required for auto Google Meet links)
GOOGLE_CLIENT_ID=
GOOGLE_CLIENT_SECRET=
GOOGLE_REDIRECT_URI=http://localhost:8080/api/integrations/google-calendar/callback
